.description
    position relative
    background-color $c-white
    padding-top 140px
    padding-bottom 155px

    +below(1199px)
        padding-top 80px
        padding-bottom 100px
        
    &::after
        content ''
        position absolute
        bottom 40px
        left -20px
        height 795px
        width 1095px
        background url('../../assets/images/rect.png') no-repeat center
        background-size 100%

        +above(768px)
            content none

    &::before
        content ''
        position absolute
        left -100px
        top 50%
        transform translateY(-50%) rotate(45deg)
        width 200px
        height 200px
        background-color $c-orange_1

        +below(1599px)
            width 150px
            height 150px

        +below(1350px)
            width 95px
            height 95px
            
        +below(767px)
            width 90px
            height 90px
            top 87px
            transform translateY(0) rotate(45deg)

    &__text
        font-family $Play
        font-style normal
        font-weight 400
        font-size 30px
        line-height 36px
        color $c-bluemain
        align-items center

        +below(1199px)
            font-size 30px
            line-height 36px

    &__title
        font-family $Play
        font-style normal
        font-weight 700
        font-size 60px
        line-height 1.2
        color $c-bluemain

        +below(1199px)
            font-size 48px
            
        +below(767px)
            font-size 36px